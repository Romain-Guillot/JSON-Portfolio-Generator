{% extends "base.j2" %}

{% block headerclass %}no-print{% endblock %}

{% block content %}
    <div id="resume-wrapper">
        <div class="no-print">
            {{button("pdfs/romainguillot_resume.pdf", "PDF")}}
        </div>
        
        <header>
            <div class="main-info">
                <h1 class="only-print">Romain Guillot</h1>
                <p class="main-description">{{subtitle}}</p>
            </div>
            <ul class="contact-info">
                <li><span class="image-link phone-link">{{contact.phone}}</span></li>
                <li><a href="mailto:{{contact.email}}" class="image-link email-link"><span>{{contact.email}}</span></a></li>
                <li><a href="https://{{contact.github}}" class="image-link github-link" target="_blank"><span>{{contact.github}}</span></a></li>
            </ul>
        </header>

        <h2>Formations</h2>
        <div class="education">
            <ul>
                {% for formation in education %}
                <li>
                    <div class="date">{{formation.date}}</div>
                    <div class="details">
                        <h3 class="formation">{{formation.formation}}</h3>
                        <p class="school">{{formation.school}}</p>
                        <p class="description">{{formation.description}}</p>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>

        <h2>Compétences</h2>
        <div class="skills">
            <ul>
                {% for skill in skills %}
                <li>
                    <h3 class="title">{{skill.category}}</h3><p class="details">{{skill.details}}</p>
                </li>
                {% endfor %}
            </ul>
        </div>

        <h2>Expériences et projets</h2>
        <div class="projects">
            <ul>
                {% for project in projects[:config.resume_projects_limit] %}
                <li>
                    <p class="type">{{project.type}}</p>
                    <h3 class="title">{{project.title}} - {{project.subtitle}}</h3>
                    <p class="stack">{{ project.stack|join(", ", attribute='name') }}</p>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}