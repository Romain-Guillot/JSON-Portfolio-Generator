<div class="resume-container">
    <p class="main-description">{{description}}</p>


    <ul class="contact-info">
        <li><span class="country">{{country}}</span></li>
        <li><a class="email">{{contact.email}}</a></li>
        <li><a  class="github">{{contact.github}}</a></li>
    </ul>


    <h2>Education</h2>
    <div class="education">
        <ul>{{# education}}
            <li>
                <div class="date">{{date}}</div>
                <div class="details">
                    <h3 class="school">{{school}}</h3>
                    <p class="formation">{{formation}}</p>
                    <p class="description">{{description}}</p>
                </div>
            </li>
        {{/ education}}</ul>
    </div>


    <h2>Skills</h2>
    <div class="skills">
        <ul>{{# skills}}
            <li>
                <h3 class="title">{{category}}</h3>
                <ul class="details">
                    {{# details}}
                    <li>{{.}}</li>
                    {{/ details}}
                </ul>
            </li>
        {{/ skills}}</ul>
    </div>


    <h2>Experience</h2>
    <div class="projects">
        <ul>{{# projects}}
            <li>
                <span class="type">{{type}}</span>
                <h3 class="title">{{title}}</h3>
                <p class="description">{{description}}</p>
                <p class="stack">{{stack}}</p>
            </li>
        {{/ projects}}</ul>
    </div>

</div>
